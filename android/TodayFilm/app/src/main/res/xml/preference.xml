<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <PreferenceCategory>
<!--        <SwitchPreference-->
<!--            app:title="상단바 위젯 표시"-->
<!--            app:summary="앱 바로가기를 상단바에 고정할 수 있어요" />-->

        <SwitchPreference
            app:title="사진 반복해서 채우기"
            app:summary="필름이 채워지지 않은 채로 완성하면,\n남은 칸을 찍은 사진들로 반복해서 채웁니다"
            app:iconSpaceReserved="false"
            android:defaultValue="true"
            android:key="repeat"/>

        <SwitchPreference
            app:title="알림 받기"
            app:summary="필름이 비어있으면 알림을 보내드려요"
            app:iconSpaceReserved="false"
            android:defaultValue="true"
            android:key="push"/>

        <SwitchPreference
            app:title="흔들어서 예전 필름 보기"
            app:summary="필름을 보면서 지난 하루를 추억하세요"
            app:iconSpaceReserved="false"
            android:defaultValue="true"
            android:key="shake"/>

    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            app:title="@string/logout"
            app:iconSpaceReserved="false"
            android:key="logout"/>
        <Preference
            app:title="회원탈퇴"
            app:iconSpaceReserved="false"
            android:key="deleteAccount"/>
    </PreferenceCategory>
</PreferenceScreen>