<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <PreferenceCategory
        app:title="애플리케이션">

        <SwitchPreference
            app:title="상단바 위젯 표시"
            app:summary="앱 바로가기를 상단바에 고정할 수 있어요" />

        <ListPreference
            android:defaultValue="00시"
            android:entries="@array/my_array"
            android:entryValues="@array/my_array"
            android:key="key_language"
            android:negativeButtonText="닫기"
            android:positiveButtonText="어딨어"
            android:summary="새로운 일기를 시작할 시간을 알려주세요"
            android:title="하루가 시작하는 시간"
            app:useSimpleSummaryProvider="true"



            />






        <SwitchPreference
            app:title="알림 받기"
            app:summary="하루 3번 알림을 보내드려요" />


        <SwitchPreference
            app:title="흔들어서 예전 일기 보기"
            app:summary="예전에 썼던 일기를 추억해보세요" />

        <Preference
            app:title="데이터 초기화"
            />



    </PreferenceCategory>

    <PreferenceCategory
        app:title="계정"
        app:isPreferenceVisible="false"

        >
        <Preference
            app:title="비밀번호 변경"
            />
        <Preference
            app:title="로그아웃"
            />
        <Preference
            app:title="회원탈퇴"
            />



    </PreferenceCategory>

    <PreferenceCategory
        app:title="계정"
        app:isPreferenceVisible="true"
        >
        <Preference
            app:title="로그인"
            app:summary="기기를 바꾸실 경우 계정을 만들어 일기를 이어가세요"
            />




    </PreferenceCategory>



</PreferenceScreen>